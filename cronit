constant seconds = 3600;

# Do an update, commit and push changes, wait, then repeat
loop {
    try run <raku --ll-exception update --commit --push>;
    say "Waiting for next update on {(now + seconds).DateTime.Str.substr(11,5)} UTC";
    sleep seconds;
}

